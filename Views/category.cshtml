<h3>Here are all the tasks in this category:</h3>
<ol>
@foreach (var task in @Model["tasks"])
{
  <li>@task.GetDescription()</li>
}
</ol>
<p><a href='/categories/@Model["category"].GetId()/tasks/new'>Add a new task</a></p>
<p><a href="/delete/categories/@Model["category"].GetId()"> Clear these tasks</a>
<p><a href='/categories_delete' type="submit">Clear All Categories</a></p>

